pkgname=kiro-calamares-config
pkgver=1.0
pkgrel=1
pkgdesc="Calamares configuration for Arch with XFCE and Qtile (GRUB)"
arch=(any)
license=('GPL')
depends=('calamares')
source=("calamares/")
md5sums=('SKIP')

package() {
  mkdir -p "$pkgdir/etc/calamares"
  cp -r calamares/* "$pkgdir/etc/calamares/"
}

